<Page
    x:Class="Shmuelie.WinRTServer.Sample.UwpClient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Content="Increment" Command="{x:Bind ViewModel.IncrementCommand, Mode=OneTime}" />
            <Button Content="Decrement" Command="{x:Bind ViewModel.DecrementCommand, Mode=OneTime}" />
            <TextBlock Text="{x:Bind ViewModel.Count, Mode=OneWay}" Width="100" />
            <Button Content="Reset" Command="{x:Bind ViewModel.ClearCommand, Mode=OneTime}" />
        </StackPanel>
    </Grid>
</Page>
