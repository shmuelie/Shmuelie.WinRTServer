<Window x:Class="Shmuelie.WinRTServer.Sample.WpfNetFxClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shmuelie.WinRTServer.Sample.WpfNetFxClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Content="Increment" Command="{Binding Mode=OneTime, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}, Path=ViewModel.IncrementCommand}" />
            <Button Content="Decrement" Command="{Binding Mode=OneTime, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}, Path=ViewModel.DecrementCommand}" />
            <TextBlock Text="{Binding Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}, Path=ViewModel.Count}" Width="100" />
            <Button Content="Reset" Command="{Binding Mode=OneTime, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}, Path=ViewModel.ClearCommand}" />
        </StackPanel>
    </Grid>
</Window>
