<Window x:Class="Shmuelie.WinRTServer.Sample.WpfNetFxClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shmuelie.WinRTServer.Sample.WpfNetFxClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Content="Increment" Command="{Binding IncrementCommand, Mode=OneTime}" />
            <Button Content="Decrement" Command="{Binding DecrementCommand, Mode=OneTime}" />
            <TextBlock Text="{Binding Count, Mode=OneWay}" Width="100" />
            <Button Content="Reset" Command="{Binding ClearCommand, Mode=OneTime}" />
        </StackPanel>
    </Grid>
</Window>
